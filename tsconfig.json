{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2017", "dom"],
    "types": ["react-native"],
    "paths": {
      "@env": ["./node_modules/react-native-dotenv"]
    },
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

